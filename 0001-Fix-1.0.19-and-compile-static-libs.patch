+		mkdir -p $(GSM_INSTALL_INC)
 		-rm $@
 		cp $? $@
 		chmod 444 $@
 
-$(GSM_INSTALL_LIB)/libgsm.a:	$(LIBGSM)
+$(GSM_INSTALL_LIB)/libgsm.%:	$(LIB)/libgsm.%
+		mkdir -p $(GSM_INSTALL_LIB)
 		-rm $@
-		cp $? $@
+		cp -d $? $@
 		chmod 444 $@
 
-
